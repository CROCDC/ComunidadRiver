<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageViewUsuario_celdaposteoconvideo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/cuenta" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewNombreDeUsuario_celdaposteoconvideo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Camilo Romero"
                        android:textColor="@color/negro"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textViewFechaDePublicacionDelPosteo_celdaposteoconvideo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ayer" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textViewTextoDelPosteo_celdaposteoconvideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/negro"
                android:textSize="15sp" />


            <VideoView
                android:id="@+id/videoViewDelPosteo_celdaposteoconvideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewButtonLike_celdaposteoconvideo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/megusta" />

                <TextView
                    android:id="@+id/textViewCantidadDeLikesDelComentario_celdaposteoconvideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageViewButtonDisLike_celdaposteoconvideo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/nomegusta" />

                <TextView
                    android:id="@+id/textViewCantidadDeDisLikes_celdaposteoconvideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageViewButtonResponder_celdaposteoconvideo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/reponder" />


            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
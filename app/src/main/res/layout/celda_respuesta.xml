<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/grisoscuro">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewUsuario_celdarespuesta"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cuenta" />

        <TextView
            android:id="@+id/textViewNombreDeUsuario_celdarespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="77dp"
            android:text="@string/nombre_de_usuario"
            android:textColor="@color/negro"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewFechaDePublicacionDelComentario_celdarespuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewNombreDeUsuario_celdarespuesta"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="6dp"
            android:text="@string/hace_1_hora"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewContenidoDelComentario_celdarespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textViewNombreDeUsuario_celdarespuesta"
            android:layout_below="@id/textViewFechaDePublicacionDelComentario_celdarespuesta"
            android:textColor="@color/negro"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewContenidoDelComentario_celdarespuesta"
            android:layout_marginStart="78dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewButtonMeGusta_celdarespuesta"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/megusta" />

            <TextView
                android:id="@+id/textViewCantidadDeLikesDelComentario_celdarespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageViewButtonNoMeGusta_celdarespuesta"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/nomegusta" />

            <TextView
                android:id="@+id/textViewCantidadDeDisLikes_celdarespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
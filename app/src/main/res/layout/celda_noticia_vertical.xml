<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aplicaciÃ³n="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:foregroundGravity="center_horizontal"
                android:adjustViewBounds="true"
                android:id="@+id/imageViewDeLaNoticia_celdanoticiavertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/textViewTituloDeLaNoticia_celdanoticiavertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageViewDeLaNoticia_celdanoticiavertical"
                android:background="@color/rojoTrasparente"
                android:padding="10dp"
                android:textColor="@color/blanco"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textViewCopeteDeLaNoticia_celdanoticiavertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTituloDeLaNoticia_celdanoticiavertical"
                android:layout_margin="10dp"
                android:textColor="@color/negro"
                android:textSize="15sp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
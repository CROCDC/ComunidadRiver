<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aplicaciÃ³n="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewDeLaNoticia_celdanoticia"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="fitXY"
                android:src="@drawable/prueba150x150" />

            <WebView
                android:id="@+id/textViewTituloDeLaNoticia_celdanoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageViewDeLaNoticia_celdanoticia"
                android:background="@color/rojoTrasparente"
                android:padding="10dp"
                android:textColor="@color/blanco"
                android:textSize="30sp" />

            <WebView
                android:id="@+id/textViewCopeteDeLaNoticia_celdanoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTituloDeLaNoticia_celdanoticia"
                android:layout_margin="10dp"
                android:textColor="@color/negro"
                android:textSize="15sp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>